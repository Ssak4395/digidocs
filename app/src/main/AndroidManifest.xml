<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.digitaldocs">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-feature android:name="android.hardware.Camera"
        android:required="true"/>






    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

    <meta-data
        android:name="com.google.firebase.ml.vision.DEPENDENCIES"
        android:value="ocr" />






        <activity
            android:name=".activities.onImageTaken"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_on_image_taken"
            android:theme="@style/FullscreenTheme">
        </activity>
    
        <activity
            android:name=".activities.SignUpConfirmation"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_email_verification"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".activities.Sign_Up_Activity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.HELP_PAGE"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.LEGAL_UPDATE"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.ForgotPassword"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.Camera"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.profile_updateEdit"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.Profile"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.Settings"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.Receipt"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.dashboard"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />




    </application>

</manifest>